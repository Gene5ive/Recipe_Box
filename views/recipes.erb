<h3> Here are all your recipes by rating </h3>

<a href='/recipes/add'>Add a New Recipe</a>
<br />
<div class='recipe_list section'>
  <table>
    <tr>
      <th></th> <th>Rating</th> <th>Delete</th>
    </tr>
  <% Recipe.all_by_rating.each do |recipe| %>
    <tr>
      <td>
        <a href='/recipes/<%= recipe.id %>'><%= recipe.name %></a>
      </td>
      <td>
        <% recipe.rating.times do %>
        <span class="glyphicon glyphicon-star rating" aria-hidden="true"></span>
        <% end %>
      </td>
      <td>
        <a href='/recipes/<%= recipe.id %>/delete'>
          <span class="glyphicon glyphicon-remove-circle warning" aria-hidden="true">
          </span>
        </a>
      </td>
    </tr>
  <% end %>
  </table>
</div>
