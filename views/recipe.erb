<div class="row section">


  <div class="col-sm-12">

    <h3 class='centered'><%= @recipe.name %></h3>

    <div class="row">
      <div class="col-sm-8 col-sm-8">
        RATING
        <% @recipe.rating.times do %>
        <span class="glyphicon glyphicon-star rating" aria-hidden="true"></span>
        <% end %>
      </div>
      <div class="col-sm-8 col-sm-8">
        <h4>CATEGORIES</h4>
        <% @recipe.categories.each do |category| %>
        <a href="/categories/<%= category.id %>/recipes"><%= category.name %></a>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-sm-8">
        <h4> Ingredients Required: </h4>
        <ul>
          <% @recipe.ingredients.each do |ingredient| %>
          <li><a href='/ingredients/<%= ingredient.id %>/recipes'><%= ingredient.name %></a></li>
          <% end %>
        </ul>
      </div>
      <div class="col-sm-8 col-sm-8">
        <h4> Instructions: </h4>
        <div>
          <textarea id='instructions'>
            <%= @recipe.instruction %>
          </textarea>
        </div>
      </div>
    </div>
  </div>
</div>
<a href='/recipes/<%= @recipe.id %>/edit'>Edit recipe card</a>
